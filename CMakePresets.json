{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "displayName": "base",
            "hidden": true,
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "gcc",
            "displayName": "gcc",
            "inherits": "base",
            "toolchainFile": "${sourceDir}/TC_gcc.cmake"
        },
        {
            "name": "clang",
            "displayName": "clang",
            "inherits": "base",
            "toolchainFile": "${sourceDir}/TC_clang.cmake"
        }
    ],
    "buildPresets": [
        {
            "name": "gcc",
            "description": "",
            "displayName": "",
            "configurePreset": "gcc",
            "targets": ["hwclient", "hwserver", "mdbroker"]
        },
        {
            "name": "clang",
            "description": "",
            "displayName": "",
            "configurePreset": "clang",
            "targets": ["hwclient", "hwserver", "mdbroker"]
        }
    ]
}